<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_margin_fragment"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayoutContainer"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewExperiencia"
            android:layout_width="match_parent"
            android:src="@drawable/ic_menu_camera"
            android:layout_height="@dimen/heigt_ppal_image" />

        <TextView
            android:id="@+id/textViewPrecio"
            tools:text="20€"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewDescripcion"
            tools:text="Destornillador eléctrico muy bonito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewResumen"
            tools:text="Se ofrece el uso de este destornillador por horas para e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>