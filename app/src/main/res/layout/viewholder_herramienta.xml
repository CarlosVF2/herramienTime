<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/carViewContainer"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewReservada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_warning_black_24dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/textViewNombreHerramienta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimen_subtitle_image"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/imageViewReservada"
            tools:text="Martillo" />

        <ImageView
            android:id="@+id/imageViewHerramienta"
            android:layout_width="@dimen/dimen_image_herramienta"
            android:layout_height="@dimen/dimen_image_herramienta"
            android:layout_below="@+id/textViewNombreHerramienta"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_photo_black_24dp" />

        <TextView
            android:id="@+id/textViewPrecioExperiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_subtitle_image"
            android:layout_below="@+id/imageViewHerramienta"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            tools:text="20â‚¬" />

    </RelativeLayout>

</android.support.v7.widget.CardView>